@page "/todascarteiras"
@inject DadosCarteiras dadosCarteira
@inject NavigationManager nav

<h1>ListarCarteiras</h1>
@if(dadosCarteira.ListaDados is not null)
{
    foreach(var carteira in dadosCarteira.ListaDados)
    {
        <h5>Numero da conta: @carteira.NumeroDaConta</h5>
        <h5>CPF: @carteira.CPF</h5>
        <h5>Carteira: @carteira.Dono</h5>
        <h5>Saldo: @carteira.Saldo </h5>
        <h5>Limite da conta: @carteira.LimiteConta </h5>
        <h5>Tarifa cobrada: @carteira.TarifaCobrada</h5>
        <button 
            @onclick="() => AbrirTela(carteira.Dono)"
            >Acessar 
        </button>
        <br />
    }
}

@code {

    public void AbrirTela(string carteiraNome)
    {
        nav.NavigateTo("/acesso/" + carteiraNome);
    }

}
